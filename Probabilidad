  <div class="contenedor">
    <h1>üé≤ Juego 1 en 1,000,000</h1>
    <p>Probabilidad de ganar: <strong>1 / 1,000,000</strong>. ¬øTe atreves a intentar la suerte?</p><div>
  <input id="totalInput" type="number" value="1000000" min="1" step="1"> <br>
  <button id="playBtn">üéØ Jugar</button>
  <button id="autoBtn">üîÅ Simular 100 veces</button>
</div>

<div class="result" id="resultArea">Presiona "Jugar" para comenzar.</div>

<div class="footer">¬© 2025 - Juego 1 en 1,000,000 | Hecho con JavaScript puro</div>

  </div>  <script>
    const playBtn = document.getElementById('playBtn');
    const autoBtn = document.getElementById('autoBtn');
    const totalInput = document.getElementById('totalInput');
    const resultArea = document.getElementById('resultArea');

    const WIN_TARGET = 1;

    function secureRandomInt(maxInclusive) {
      if (window.crypto && crypto.getRandomValues) {
        const array = new Uint32Array(1);
        crypto.getRandomValues(array);
        return (array[0] % maxInclusive) + 1;
      }
      return Math.floor(Math.random() * maxInclusive) + 1;
    }

    function playOnce(total) {
      const n = secureRandomInt(total);
      if (n === WIN_TARGET) {
        resultArea.innerHTML = `<span class='win'>¬°GANASTE! üéâ</span><br>N√∫mero: ${n}`;
      } else {
        resultArea.innerHTML = `<span class='lose'>Perdiste üò¢</span><br>N√∫mero: ${n}`;
      }
    }

    playBtn.addEventListener('click', () => {
      const total = Math.max(1, Math.floor(Number(totalInput.value) || 1000000));
      playOnce(total);
    });

    autoBtn.addEventListener('click', async () => {
      const total = Math.max(1, Math.floor(Number(totalInput.value) || 1000000));
      let wins = 0;
      const runs = 100;
      for (let i = 0; i < runs; i++) {
        const n = secureRandomInt(total);
        if (n === WIN_TARGET) wins++;
        await new Promise(r => setTimeout(r, 1));
      }
      resultArea.innerHTML = `Simulaci√≥n completa:<br><span class='win'>${wins} victorias</span> de ${runs} intentos.`;
    });
  </script></body>
